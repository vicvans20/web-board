<div class="container">

	<div class="row">
		<div class="col-md-12">
			<h2 class="text-xs-center">Simple Sum</h2>
		</div>
	</div>

		<div class="row">
			<div class="col-sm-12">
				<form id="sum-form" class="form-inline" method="post">
				
					<div class="form-group">
						<input name="num1" class="form-control" type="number" placeholder="numeric value 1">
						<span class="text-info">+</span>
					</div>
					<div class="form-group">
						<input name="num2" class="form-control" type="number" placeholder="numeric value 2">
					</div>
					<button type="submit" class="btn btn-primary">SUM</button>
				
				</form>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<input id="sum-result" type="number" class="form-control form-control-lg text-xs-center disabled" readonly placeholder="RESULT">
			</div>
		</div>
</div>
